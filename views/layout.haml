!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title KuroPaste
    %base{:href => "/"}
    %link{:rel => "stylesheet", :href => "css/style.css"}
    %link{:rel => "stylesheet", :href => "css/idle.css"}
    %link{:rel => "icon", :type => "image/png", :href => "img/favicon.png"}
  %body
    %header{:class => "main"}
      .main
        %h1.logo
          KuroPaste
        %nav{:class => "main-left"}
          %ul
            %li
              %a{:href => "/"} New
            %li
              %a{:href => "/list"} List
        %form{:action  => "/search", :method  => "post"}
          %input.search{:type => "text", :name => "search",
                      :placeholder => "Search"}
        %nav{:class => "main-right" }
          %ul
            %li
              %a{:href => "/line"} #
    %section{:class => "main"}
      =yield
    %footer{:class => "main"}
      .main
        %p
          KuroPaste &copy; 2012 fuzyll - All Rights Reserved


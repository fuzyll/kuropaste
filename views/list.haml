%h2
  List of Pastes
%table
  %tr
    %th
      ID
    %th
      Name
    %th
      Language
    %th
      Time
  - @list.each do |paste|
    %tr
      %td.center
        #{paste.id}
      %td
        %a{:href => "#{url "/#{paste.id}"}"} #{Sanitize.clean(paste.summary)}
      %td
        #{paste.language}
      %td
        #{paste.timestamp.strftime("%Y-%m-%d at %H:%M:%S %Z")}

